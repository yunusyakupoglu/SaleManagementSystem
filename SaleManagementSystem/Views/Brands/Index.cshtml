@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Site/brand.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <div class="row">
                        <div class="col s3 m3 left-align">
                            <!-- Buton ve Select kutusunu aynı satırda tutmak için iç içe div kullanımı -->
                            <div class="row">
                                <div class="col s6">
                                    <a href="#add-permission" class="waves-effect waves-light btn modal-trigger">Marka Ekle</a>
                                </div>
                                <div class="col s6">
                                    <select id="paginator-select" onchange="paginate()">
                                        <option value="" disabled>Kayıt sayısı</option>
                                        <option value="5" selected>5</option>
                                        <option value="10">10</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                        <option value="500">500</option>
                                        <option value="1000">1000</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col s6 m6 center-align"></div>
                        <div class="col s3 m3 right-align">
                            <div class="input-field">
                                <input id="search" type="search" placeholder="ara">
                                <i class="material-icons prefix">search</i>
                            </div>
                        </div>
                    </div>


                    <table>
                        <thead>
                            <tr>
                                <th>Dosya</th>
                                <th>Marka</th>
                                <th>Aktif</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody id="listContainer">
                        </tbody>
                    </table>

                    <div class="row" style="margin-top:30px">
                        <div class="col s4 m4 left-align">
                            <p id="listCount"></p>
                        </div>
                        <div class="col s4 m4 center-align">
                            <ul class="pagination">
                                <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
                                <li class="active"><a href="#!">1</a></li>
                                <li class="waves-effect"><a href="#!">2</a></li>
                                <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
                            </ul>
                        </div>
                        <div class="col s4 m4 right-align">
                            <p id="totalDataCount"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="add-permission" class="modal">
    <div class="modal-content">
        <form enctype="multipart/form-data">
            <div class="row">
                <div class="input-field col s12 m12">
                    <div class="file-field input-field">
                        <div class="btn blue darken-1">
                            <span>File</span>
                            <input type="file" id="file">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" placeholder="Upload one or more files">
                        </div>
                    </div>
                </div>
                <div class="input-field col s12 m12">
                    <div class="input-field">
                        <input id="brandName" type="text">
                        <label for="brandName" id="brandName">Marka Adı</label>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a href="#!" onclick="insert()" class="btn modal-action modal-close waves-effect waves-light cyan">Save</a>
        <a href="#!" class="btn modal-action modal-close waves-effect waves-light grey darken-4">Cancel</a>
    </div>
</div>

<!-- Kategori Düzenleme Modalı -->
<div id="edit-brand-modal" class="modal">
    <div class="modal-content">
        <h4>Firma Düzenle</h4>
        <form enctype="multipart/form-data">
            <div class="row">
                <div class="input-field col s12 m12">
                    <div class="file-field input-field">
                        <div class="btn blue darken-1">
                            <span>File</span>
                            <input type="file" id="file">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" id="fileInput" type="text" placeholder="Upload one or more files">
                        </div>
                    </div>
                </div>
                <div class="input-field col s12">
                    <input id="editBrandName" type="text">
                    <label for="editBrandName">Firma Adı</label>
                </div>
                <input type="hidden" id="editBrandGuid">
                <input type="hidden" id="editBrandImgUrl">
                <input type="hidden" id="editBrandImgName">
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a href="#!" onclick="updateBrand()" class="btn waves-effect waves-light cyan">Güncelle</a>
        <a href="#!" class="btn waves-effect waves-light grey darken-4 modal-close">İptal</a>
    </div>
</div>


